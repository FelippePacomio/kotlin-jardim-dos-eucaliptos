<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/red_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Criar Evento"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/titleJd"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uploadimg2"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadTopic"
                android:background="@drawable/red_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Título do evento"
                android:gravity="start|center_vertical"
                android:textColor="@color/titleJd"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/uploadDesc"
                android:background="@drawable/red_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Descrição do evento"
                android:gravity="start|center_vertical"
                android:textColor="@color/titleJd"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadLang"
                android:background="@drawable/red_border"
                android:paddingStart="16dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/baseline_calendar_today_24"
                android:layout_marginTop="20dp"
                android:hint="Data e hora do evento"
                android:gravity="start|center_vertical"
                android:textColor="@color/titleJd"
                android:clickable="true"
                android:focusable="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/titleJd"
                android:textColor="@color/white"
                android:text="Salvar"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
