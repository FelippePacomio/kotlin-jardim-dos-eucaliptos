<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Image Slider -->
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:iss_auto_cycle="true"
            app:iss_delay="3000"
            app:iss_period="3000"
            app:iss_placeholder="@color/grey"
            app:iss_error_image="@color/grey"
            app:iss_corner_radius="20"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"
            app:iss_text_align="CENTER" />

        <TextView
            android:paddingTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confira nossos eventos!"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/redJd">

        </TextView>

        <!-- Event Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <!-- Event Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventCardView1"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/redJd"
                app:cardCornerRadius="15dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eventsImage1"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/newsimage1" />

                    <TextView
                        android:id="@+id/eventsTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Event Title 1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Event Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventCardView2"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/redJd"
                app:cardCornerRadius="15dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eventsImage2"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/newsimage1" />

                    <TextView
                        android:id="@+id/eventsTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Event Title 2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <!-- Event Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventCardView3"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/redJd"
                app:cardCornerRadius="15dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eventsImage3"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/newsimage1" />

                    <TextView
                        android:id="@+id/eventsTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Event Title 3"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Event Card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eventCardView4"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/redJd"
                app:cardCornerRadius="15dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/eventsImage4"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/newsimage1" />

                    <TextView
                        android:id="@+id/eventsTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Event Title 4"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confira nossas notícias!"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/redJd"/>

        <!-- News Fields -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newsField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/newsThumbnail1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/newsimage1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundCornerBottom" />

            <View
                android:id="@+id/rectangle1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_rectangle"
                app:layout_constraintTop_toTopOf="@id/newsThumbnail1"
                app:layout_constraintBottom_toBottomOf="@id/newsThumbnail1"
                app:layout_constraintStart_toEndOf="@id/newsThumbnail1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/newsTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Título da Notícia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/rectangle1"
                app:layout_constraintStart_toStartOf="@id/rectangle1"
                app:layout_constraintEnd_toEndOf="@id/rectangle1"
                app:layout_constraintBottom_toBottomOf="@id/rectangle1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newsField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingBottom="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/newsThumbnail2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/newsimage1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundCornerBottom" />

            <View
                android:id="@+id/rectangle2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_rectangle"
                app:layout_constraintTop_toTopOf="@id/newsThumbnail2"
                app:layout_constraintBottom_toBottomOf="@id/newsThumbnail2"
                app:layout_constraintStart_toEndOf="@id/newsThumbnail2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/newsTitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Título da Notícia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/rectangle2"
                app:layout_constraintStart_toStartOf="@id/rectangle2"
                app:layout_constraintEnd_toEndOf="@id/rectangle2"
                app:layout_constraintBottom_toBottomOf="@id/rectangle2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newsField3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingBottom="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/newsThumbnail3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/newsimage1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundCornerBottom" />

            <View
                android:id="@+id/rectangle3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_rectangle"
                app:layout_constraintTop_toTopOf="@id/newsThumbnail3"
                app:layout_constraintBottom_toBottomOf="@id/newsThumbnail3"
                app:layout_constraintStart_toEndOf="@id/newsThumbnail3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/newsTitle3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Título da Notícia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/rectangle3"
                app:layout_constraintStart_toStartOf="@id/rectangle3"
                app:layout_constraintEnd_toEndOf="@id/rectangle3"
                app:layout_constraintBottom_toBottomOf="@id/rectangle3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newsField4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:paddingBottom="6dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/newsThumbnail4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/newsimage1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundCornerBottom" />

            <View
                android:id="@+id/rectangle4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_rectangle"
                app:layout_constraintTop_toTopOf="@id/newsThumbnail4"
                app:layout_constraintBottom_toBottomOf="@id/newsThumbnail4"
                app:layout_constraintStart_toEndOf="@id/newsThumbnail4"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/newsTitle4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Título da Notícia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="@id/rectangle4"
                app:layout_constraintStart_toStartOf="@id/rectangle4"
                app:layout_constraintEnd_toEndOf="@id/rectangle4"
                app:layout_constraintBottom_toBottomOf="@id/rectangle4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </LinearLayout>
</ScrollView>
