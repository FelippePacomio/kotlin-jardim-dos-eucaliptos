<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_splash_screen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash_screen_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JardimdosEucaliptos"
        tools:targetApi="31">

        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="">
        </activity>
        <activity android:name=".UploadActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".UpdateActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".DetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".UploadNewsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".UpdateNewsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".DetailNewsActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
